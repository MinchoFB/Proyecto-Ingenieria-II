{% extends 'layout.html.twig' %}

{% block content%}
<div class="row">
    <div class="col-md-6 col-md-offset-3">

        {% if reports  %}
        <div class="alert alert-success">
            {% for report in reports %}
            <p><strong>{{ report }}</strong></p>
            {% endfor  %}
        </div>
        {% endif %}

        {% if errors  %}
        <div class="alert alert-danger">
            {% for error in errors %}
            <p>{{ error }}</p>
            {% endfor  %}
        </div>
        {% endif %}

        <div class="alert alert-info">
            <p>Todos los campos con (*) son obligatorios.</p>
            <p>El nombre solo permite caracteres alfabeticos y espacios.</p>
        </div>


        <form role="form" method="post" action="/cookbook/controller/contactController.php" id="contactform">
            <fieldset>
                <legend>Contactanos</legend>

                <div class="form-group">
                    <label for="name">Nombre <span class="help-required">*</span></label>
                    <input class="form-control" type="text" name="nombre" autofocus required>
                </div>

                <div class="form-group">
                    <label for="email">Email <span class="help-required">*</span></label>
                    <input class="form-control" type="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="subject">Asunto <span class="help-required">*</span></label>
                    <input class="form-control" type="text" name="asunto" required>
                        {#<select name="sujeto" id="sujeto" class="form-control required" role="select" aria-required="true">
                            <option></option>
                            <option>One</option>
                            <option>Two</option>
                        </select>#}
                </div>

                <div class="form-group">
                    <label for="message">Mensaje <span class="help-required">*</span></label>
                    <textarea class="form-control"  rows="8" name="mensaje" required></textarea>
                </div>

                <div class="actions">
                    <input type="submit" value="Envia Tu Mensaje" class="btn btn-primary" title="Cliquea aquÃ­ para enviar tu mensaje" />
                    <input type="reset" value="Limpiar" class="btn btn-danger" title="Remueve todos los datos ingresados del formulario" />
                </div>
            </fieldset>
        </form>
    </div><!-- col -->
</div><!-- row -->

<hr>
{% endblock %}