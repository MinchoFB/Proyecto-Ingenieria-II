{% extends 'layout.html.twig' %}

{% block content%}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        {% if reports  %}
            {% for report in reports %}
                {{ report }}
            {% endfor  %}
        {% endif %}
        <div class="login-panel panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Por favor ingrese sus datos</h3>
            </div>
            <div class="panel-body">
                <form role="form" action="/cookbook/controller/loginController.php" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="E-Mail" name="email" type="email" autofocus required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" name="password" type="password" minlength="6" required>
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Ingresar">
                       
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}